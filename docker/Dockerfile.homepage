FROM python:3.11.9-slim-bookworm

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV POETRY_VERSION=1.8
ENV POETRY_HOME=/opt/poetry
ENV PATH=$POETRY_HOME/bin:$PATH
ENV OPENAI_TEMPERATURE=0

WORKDIR /app

RUN apt update && apt upgrade -y

RUN apt-get install -y curl

# Install tailscale
RUN curl -fsSL https://pkgs.tailscale.com/stable/debian/bookworm.noarmor.gpg | tee /usr/share/keyrings/tailscale-archive-keyring.gpg >/dev/null && \ 
    curl -fsSL https://pkgs.tailscale.com/stable/debian/bookworm.tailscale-keyring.list | tee /etc/apt/sources.list.d/tailscale.list && \
    apt-get install tailscale && \
    tailscale up --authkey tskey-auth-kZUHeFJxpM11CNTRL-w583zA12GyPuHxQar3JrxPqWw54FwreVT

# temp key, remove later
RUN pip install "poetry==$POETRY_VERSION"

COPY pyproject.toml poetry.lock README.md /app/
COPY concrete /app/concrete
RUN poetry config virtualenvs.create false 
RUN poetry install --only webapp-homepage,main

COPY /webapp/homepage ./

RUN chmod +x ./scripts/start.sh

EXPOSE 80
CMD ["./scripts/start.sh"]